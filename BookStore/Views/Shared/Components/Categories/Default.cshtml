
@model IEnumerable<string>
<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index" asp-route-bookCategory="">Home</a>
    <br />

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@c"
            class="btn @(ViewBag.Selected == t ? "btn-primary" : "btn-outline-secondary")">@c</a>
        <br />

    }
</div>